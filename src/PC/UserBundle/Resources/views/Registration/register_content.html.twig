

{% block body2 %}
<div style='max-width: 500px; margin: 0 auto;'>
        <div class="row">
            <div class="page-header">
                <h1>{{ 'title_user_registration'|trans({}, 'SonataUserBundle') }}</h1>
            </div>
        </div>
    
    <br>
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal">
            {{ form_errors(form) }}
            <div class="form-group">
                    {{ form_label(form.username, "Nom d'utilisateur", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                    {{ form_errors(form.username) }}
                    <div class="col-sm-4">
                    {{ form_widget(form.username, {'attr': {'class': ''}})}}
                    </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.email, "Adresse e-mail", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                    {{ form_errors(form.email) }}
                    <div class="col-sm-4">
                    {{ form_widget(form.email, {'attr': {'class': ''}})}}
                    </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.plainPassword.first, "Mot de passe", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                    {{ form_errors(form.plainPassword.first) }}
                    <div class="col-sm-4">
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': ''}})}}
                    </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.plainPassword.second, "Vérification", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                    {{ form_errors(form.plainPassword.second) }}
                    <div class="col-sm-4">
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': ''}})}}
                    </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.departement, "Département", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                    {{ form_errors(form.departement) }}
                    <div class="col-sm-4">
                    {{ form_widget(form.departement, {'attr': {'class': ''}})}}
                    </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.firstname, "Prénom", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                    {{ form_errors(form.firstname) }}
                    <div class="col-sm-4">
                    {{ form_widget(form.firstname, {'attr': {'class': ''}})}}
                    </div>
            </div>
            <div class="form-group">
                    {{ form_label(form.lastname, "Nom", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                    {{ form_errors(form.lastname) }}
                    <div class="col-sm-4">
                    {{ form_widget(form.lastname, {'attr': {'class': ''}})}}
                    </div>
            </div>

            {{ form_rest(form) }}
            <div class="form-group">
                <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" style='width : 50%' class="btn pc_skyblue_btn" />
                <a class="btn pc_skyblue_btn pull-right" style='width : 50%' data-toggle='modal' data-placement='top' data-target='#info'>Informations</a>
            </div>
        {{ form_end(form) }}
</div>

<div class="modal fade" id="info">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">L'inscription</h4>
            </div>
            <div class="modal-body">  
                <p>L'inscription vous permet d'avoir accès aux services du site. Après votre inscription, une demande de validation sera envoyée à l'administrateur qui pourra, alors, valider votre compte.</p> 
            </div>
            <div class="modal-footer ">
                <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Fermer</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}