{% extends '::layout.html.twig' %}

{% block body -%}
    <h2>Création d'une template <a  data-target="#information" data-toggle="modal" class='glyphicon glyphicon-info-sign'></a></h2>
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}
    <div class ="pc_info_group">
        <div class="form-group">
            {{ form_label(form.nom, "Nom *", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.nom) }}
            <div class="col-sm-4">
            {{ form_widget(form.nom, {'attr': {'class': 'tini'}})}}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.type, "Sous Type de fiche *", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.type) }}
            <div class="col-sm-4">
            {{ form_widget(form.type, {'attr': {'class': 'tini'}})}}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.template, "Template *", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.template) }}
            <div class="col-sm-12">
            {{ form_widget(form.template, {'attr': {'class': 'tini'}})}}
            </div>
        </div>
    </div>               
    {{ form_rest(form) }}
    {{ form_end(form) }}
    <br>
    <ul class="record_actions">
        <li>
            <a href="{{ path('template') }}">
                Retour à la liste
            </a>
        </li>
    </ul>
    
    <div class="modal fade" style="top:25%;outline: none;" id="information" aria-labelledby="information" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                    <h4 class="modal-title custom_align" id="Heading">Information</h4>
                </div>
                <div class="modal-body">
                    <ol>
                        <li> Donner un nom à votre template</li>
                        <li> Créer un contenu avec le bon mapping</li>
                        <li> Choisir le sous-type</li>
                    </ol>
                </div>
            </div>
        </div>
    </div> 
{% endblock %}
