{% extends '::layout.html.twig' %}

{% block body -%}
    <div class="container container-fluid">
        <div class="row">
            <div class="col-lg-12 page-header">
                <h1>Liste des templates.</h1>
                <a data-placement="top" data-toggle="tooltip" title="Créer un nouveau template" class="btn pc_skyblue_btn" style="font-size: 150%; margin-bottom: 2%;" href="{{ path('template_new') }}">Créer <span class="fa fa-plus"></span></a>
            </div>
        </div>
        <div class="row">
            <table id="table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('template_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.nom }}</td>
                        <td>
                        <ul>
                            <li>
                                <a href="{{ path('template_show', { 'id': entity.id }) }}">Voir</a>
                            </li>
                            <li>
                                <a href="{{ path('template_edit', { 'id': entity.id }) }}">Editer</a>
                            </li>
                        </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>                
    </div>
{% endblock %}
