{% extends '::layout.html.twig' %}

{% block body -%}
    <h1>Edition location</h1>
    <div class="pc_info_group">
        {{form_start(edit_form, {'attr': {'class': 'form-horizontal'}})}}
        {{form_errors(edit_form)}}
            <div class="form-group">
                {{ form_label(edit_form.dateDebut, "Date de début", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(edit_form.dateDebut) }}
                <div class="col-sm-4">
                {{ form_widget(edit_form.dateDebut, {'attr': {'class': ''}})}}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.dateEcheance, "Date d'écheance", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(edit_form.dateEcheance) }}
                <div class="col-sm-4">
                {{ form_widget(edit_form.dateEcheance, {'attr': {'class': ''}})}}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.nombreDemiJournees, "Nombre de demi-journées", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(edit_form.nombreDemiJournees) }}
                <div class="col-sm-4">
                {{ form_widget(edit_form.nombreDemiJournees, {'attr': {'class': ''}})}}
                </div>
            </div>
        {{ form_rest(edit_form) }}
        {{form_end(edit_form)}}
    </div>

    <ul class="record_actions">
        <li>
            <a href="{{ path('location') }}">
                Retour à la liste des location
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
