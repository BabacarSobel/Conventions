{% extends '::layout.html.twig' %}

{% block body -%}
    <div class="container">
        <h1>Liste des departements</h1>
        <br>
        <a class="btn pc_skyblue_btn" href="{{ path('departement_new') }}">Nouveau</a>  
        <hr>
        <table id="departement_liste" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom du département</th>
                    <th>Responsable du département</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('departement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.departmentName }}</td>
                    <td>{{ entity.departmentLeader }}</td>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('departement_show', { 'id': entity.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('departement_edit', { 'id': entity.id }) }}">Modifier</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <script>
        $(document).ready( function () {
            $('#departement_liste').DataTable();
        } );
    </script>
{% endblock %}
