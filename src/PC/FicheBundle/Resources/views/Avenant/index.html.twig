{% extends '::layout.html.twig' %}

{% block body -%}
    <div class="container">
        <h1>Liste des avenants</h1>

        <table id="avenant_list" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Fiche</th>
                    <th>Date du contrat initial</th>
                    <th>Type de partenaire</th>
                    <th>Date d'effet du ci</th>
                    <th>Date de fin du ci</th>
                    <th>Objet</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('avenant_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.numeroFiche }}</td>
                    <td>{% if entity.dateContratInitial %}{{ entity.dateContratInitial|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ entity.typePartenaire }}</td>
                    <td>{% if entity.dateEffetCI %}{{ entity.dateEffetCI|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if entity.dateFinCI %}{{ entity.dateFinCI|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ entity.objet }}</td>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('avenant_show', { 'id': entity.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('avenant_edit', { 'id': entity.id }) }}">Modifier</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <script>
        $(document).ready( function () {
            $('#avenant_list').DataTable();
        } );
    </script>
    {% endblock %}
